<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/local_singer_iv_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
<TextView
    android:layout_toRightOf="@+id/local_singer_iv_display"
    android:id="@+id/local_singer_tv_editor"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/local_singer_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/local_singer_iv_display"
        android:layout_below="@+id/local_singer_iv_display"
        />
    <ImageView
        android:layout_marginLeft="350dp"
        android:id="@+id/local_singer_attention"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
</LinearLayout>