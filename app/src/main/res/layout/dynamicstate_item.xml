<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/dynamicstate_iv_touxiang"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/my_user_default"
            />
        <TextView
            android:id="@+id/dynamicstate_username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户名"
            android:layout_toRightOf="@id/dynamicstate_iv_touxiang"
            />
            <TextView
                android:id="@+id/dynamicstate_tv_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="昨天"
                android:layout_below="@+id/dynamicstate_username"
                android:layout_toRightOf="@+id/dynamicstate_iv_touxiang"
                />
            <TextView
                android:layout_marginLeft="20dp"
                android:id="@+id/dynamicstate_tv_collect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/dynamicstate_tv_time"
                android:layout_below="@+id/dynamicstate_username"
                android:text="收藏歌曲"
                />
            <ImageView
                android:id="@+id/dynamicstate_iv_delete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/delete"
                android:layout_marginLeft="360dp"
                android:layout_marginTop="20dp"
                />
    </RelativeLayout>
    <TextView
        android:id="@+id/dynamicstate_tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="内容"
        />
        <ImageView
            android:id="@+id/dynamicstate_iv_music"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="300dp"
            android:id="@+id/dynamicstate_iv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/dynamicstate_tv_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dynamicstate_iv_comment"
            android:text="评论"
            />
        <ImageView
            android:layout_marginLeft="20dp"
            android:id="@+id/dynamicstate_iv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dynamicstate_tv_comment"/>
        <TextView
            android:id="@+id/dynamicstate_tv_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/dynamicstate_iv_like"
            android:text="点赞"
            />
    </RelativeLayout>
</LinearLayout>